@page
@model Zamagon.Web.Pages.ProductsModel
@using Zamagon.Model
@{
    ViewData["Title"] = "Products";
}

<div class="row" style="background-color:lightgray;margin-bottom:20px;margin-top:10px;">
    <h2 class="text-center">Products</h2>
    <h4 class="text-center">EndPoint: @Model.CurrentEndPoint?.Name</h4>
</div>

@if (Model.Products?.Any() ?? false)
{
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th><label>ID</label></th>
                <th><label>Description</label></th>
                <th><label>Price</label></th>
            </tr>
        </thead>
        <tbody>

            @foreach (Product product in Model.Products)
            {
                <tr>
                    <td><label>@product.ID</label></td>
                    <td><label>@product.Description</label></td>
                    <td><label>@product.Price</label></td>
                </tr>
            }
        </tbody>
    </table>
}
