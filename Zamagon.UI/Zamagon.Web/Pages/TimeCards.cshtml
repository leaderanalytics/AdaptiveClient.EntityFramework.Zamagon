@page
@model Zamagon.Web.Pages.TimeCardsModel
@using Zamagon.Model
@{
    ViewData["Title"] = "TimeCards";
}

<div class="row" style="background-color:lightgray;margin-bottom:20px;margin-top:10px;">
    <h2 class="text-center">TimeCards</h2>
    <h4 class="text-center">EndPoint: @Model.CurrentEndPoint?.Name</h4>
</div>

@if (Model.TimeCards?.Any() ?? false)
{
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th><label>ID</label></th>
                <th><label>Employee ID</label></th>
                <th><label>WorkDate</label></th>
                <th><label>HoursWorked</label></th>
            </tr>
        </thead>
        <tbody>

            @foreach (TimeCard tc in Model.TimeCards)
            { 
                <tr>
                    <td><label>@tc.ID</label></td>
                    <td><label>@tc.EmployeeID</label></td>
                    <td><label>@tc.WorkDate</label></td>
                    <td><label>@tc.HoursWorked</label></td>
                </tr>
            }
        </tbody>
    </table>
}
