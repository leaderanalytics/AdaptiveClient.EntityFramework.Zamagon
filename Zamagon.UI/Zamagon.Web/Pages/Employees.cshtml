@page
@model Zamagon.Web.Pages.EmployeesModel
@using Zamagon.Model
@{
    ViewData["Title"] = "Employees";
}

<div class="row" style="background-color:lightgray;margin-bottom:20px;margin-top:10px;">
    <h2 class="text-center">Employees</h2>
    <h4 class="text-center">EndPoint: @Model.CurrentEndPoint?.Name</h4>
</div>

@if (Model.Data?.Any() ?? false)
{
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th><label>ID</label></th>
                <th><label>Name</label></th>
            </tr>
        </thead>
        <tbody>

            @foreach (Employee emp in Model.Data)
            { 
                <tr>
                    <td><label>@emp.ID</label></td>
                    <td><label>@emp.Name</label></td>
                </tr>
            }
        </tbody>
    </table>
}
